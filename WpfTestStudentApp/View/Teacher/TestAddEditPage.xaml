<Page x:Class="WpfTestStudentApp.View.Teacher.TestAddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfTestStudentApp.View.Teacher"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestAddEditPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" Width="400" VerticalAlignment="Center">
            <TextBlock Text="Наименование теста" />
            <TextBox Text="{Binding Name}" />
            <TextBlock Text="Количество вопросов" />
            <TextBox  Text="{Binding Amount}" />
           
            <Button Click="SaveClick" Content="Сохранить" />

        </StackPanel>
    </Grid>
</Page>
